<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/background_material_dark"
    tools:context="nu.appteam.safetyapplication2015.main.SettingsActivity">

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_centerHorizontal="true"
        android:layout_marginBottom="1pt"
        android:layout_marginTop="10pt"

        android:text="Current manager:"
        android:textColor="@color/abc_primary_text_material_dark"
        />

    <TextView

        android:id="@+id/lbl_current_manager"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_centerHorizontal="true"
        android:layout_marginBottom="1pt"
        android:layout_marginTop="20pt"

        android:textColor="@color/abc_primary_text_material_dark"
        />

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_centerHorizontal="true"
        android:layout_marginBottom="1pt"
        android:layout_marginTop="60pt"

        android:text="Change manager email adress"
        android:textColor="@color/abc_primary_text_material_dark"
        />

    <EditText
        android:layout_width="160pt"
        android:id="@+id/txt_email_field"
        android:layout_height="25pt"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="70pt"
        android:textColor="@color/abc_primary_text_material_dark"/>

    <Button android:id="@+id/btn_save_email_address"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:height="30pt"
        android:width="160pt"

        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100pt"

        android:text="@string/btn_sendreport_text"
        android:onClick="saveEmailAddress"
        />

</RelativeLayout>
